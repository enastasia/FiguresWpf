<Window x:Class="FiguresWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:FiguresWpf.Controls"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="18">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="18" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" CornerRadius="12" BorderBrush="{StaticResource BrushStroke}" BorderThickness="1" Background="{StaticResource BrushBg1}" Padding="16">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Налаштування фігури" FontSize="20" FontWeight="Bold" Foreground="White"/>
                </StackPanel>

                <TabControl x:Name="Tabs" Background="Transparent" BorderThickness="0">
                    <TabItem Header="Круг">
                        <controls:CircleControl x:Name="CircleCtl" />
                    </TabItem>
                    <TabItem Header="Квадрат">
                        <controls:SquareControl x:Name="SquareCtl" />
                    </TabItem>
                    <TabItem Header="Ромб">
                        <controls:RhombControl x:Name="RhombCtl" />
                    </TabItem>
                </TabControl>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                    <Button Content="Очистити поле" Click="Clear_Click" />
                </StackPanel>
            </DockPanel>
        </Border>
        
        <Border Grid.Column="2" CornerRadius="12" BorderBrush="{StaticResource BrushStroke}" BorderThickness="1" Background="{StaticResource BrushBg1}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                </DockPanel>

                <Canvas x:Name="DrawCanvas" Grid.Row="1" Background="{StaticResource BrushBg0}" ClipToBounds="True" />
            </Grid>
        </Border>

    </Grid>
</Window>
